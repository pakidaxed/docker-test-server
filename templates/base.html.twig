<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}Welcome to the Holiday APP!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}">
        <link rel="stylesheet" href="{{ asset('css/sticky-footer.css') }}">
    {% endblock %}
</head>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark p-3">
    <a class="navbar-brand" href="/">
        <img src="{{ asset('img/sf.png') }}" alt="SF Logo"
             width="80"> Symfony Holiday APP</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="my-btn nav-link" href="{{ path('app_holidays') }}">Search Holidays</a>
            </li>
        </ul>
    </div>
</nav>
<body>
{% block body %}
    <div class="header">WELLCOME</div>
    <div class="container d-flex justify-content-center">
        <div class="main-box w-100">
            <h1 class="title">HolidayAPP</h1>
            <div class="small-box">
                <h3>Functions</h3>
                <ul>
                    <li>Forms</li>
                    <li>HTTP Client</li>
                    <li>Doctrine</li>
                </ul>
            </div>
            <div class="small-box">
                <h3>Tests</h3>
                <ul>
                    <li>Simple UnitTest</li>
                    <li>Function test crawling trough the pages</li>
                </ul>
            </div>
            <div class="small-box">
                <h3>Tools</h3>
                <ul>
                    <li>Symfony</li>
                    <li>Docker</li>
                    <li>Bootstrap</li>
                </ul>
            </div>
            <div class="small-box">
                <h3>Versions</h3>
                <ul>
                    <li>PHP 7.4</li>
                    <li>MySQL 5.7</li>
                    <li>App Version v1.0 beta</li>
                </ul>
            </div>
            <div class="small-box">
                <h3>Source</h3>
                <ul>
                    <li><a href="http://github.com">http://hgithub.lt/dsdsf.git</a></li>
                </ul>
            </div>
        </div>
        <div class="main-box w-100 d-flex justify-content-center">
            <img src="{{ asset('img/sf_big.png') }}" class="img-fluid" width="300" alt="SF LOGO">
        </div>
    </div>
{% endblock %}
<footer class="footer bg-dark">
    <div class="container-fluid text-right">
        {% block footer %}
            <span class="text-white">Â© Tomas Jucius (jucius.tomas@gmail.com) 2020</span>
        {% endblock %}
    </div>
</footer>
{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}

</body>
</html>
